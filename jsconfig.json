{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@assets/*": ["assets/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
